{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true
	},
	"include": ["*.ts"]
}
